<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Warehouse.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Warehouse.WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-red border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-first-element">
                <img class="navbar-logo" src="./favicon.ico"/>
                <a class="text-light warehouse-navbar-brand">Warehouse</a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse dropdown-menu-sm-start d-sm-inline-flex justify-content-between">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                @* <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                <div class="dropdown">
                    <button class="dropbtn">Active Records</button>
                    <div class="dropdown-content">
                        <a class="nav-link text-light" asp-area="" asp-controller="Client"
                           asp-action="Index">Clients</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="ReceiptDocument" asp-action="Index">ReceiptDocuments</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="ReceiptResource" asp-action="Index">ReceiptResources</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="Resource"
                           asp-action="Index">Resources</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="ResourceBalance" asp-action="Index">ResourceBalances</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="ShippingDocument" asp-action="Index">ShippingDocuments</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="ShippingResource" asp-action="Index">ShippingResources</a>
                        <a class="nav-link text-light" asp-area="" asp-controller="UnitOfMeasurement"
                           asp-action="Index">UnitsOfMeasurement</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">Archived Records</button>
                    <div class="dropdown-content">
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="Client">Clients</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="ReceiptDocument">ReceiptDocuments</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="ReceiptResource">ReceiptResources</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="Resource">Resources</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="ResourceBalance">ResourceBalances</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="ShippingDocument">ShippingDocuments</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="ShippingResource">ShippingResources</a>
                        <a class="nav-link text-light" asp-action="Archived" asp-controller="UnitOfMeasurement">UnitsOfMeasurement</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Warehouse.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>